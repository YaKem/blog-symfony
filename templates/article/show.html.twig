{% extends 'layout/base.html.twig' %}

{% block title %}Mon blog{% endblock %}

{% block body %}

<div>
    <h1>Un nouveau jour, de nouvelles aventures</h1>
    <h2>{{ article.title }}</h2>
    <img src="{{ (article.imageName ? vich_uploader_asset(article) : asset('build/images/placeholder.png')) | imagine_filter('square_thumbnail_big') }}" alt={{ article.title }} />
    <p class="mt-3">{{ article.content }}</p>
    <p class="muted">Post√© le {{ article.createdAt|date('d/m/Y') }}</p>
    <a href="{{ path('route_edit', {'id': article.id}) }}">Edit</a> | <a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-article-delete-form').submit();">Delete</a>

    <form id="js-article-delete-form" action="{{ path('route_delete', {'id': article.id}) }}" method="post" style="display: none;">
        <input type="text" name="csrf_token" value="{{ csrf_token('article_deletion' ~ article.id) }}" />
        <input type="hidden" name="_method" value="DELETE" />
    </form>
</div>

{% endblock %}
